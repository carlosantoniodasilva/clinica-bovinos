<%= form_for(@rebanho) do |f| %>
  <% if @rebanho.errors.any? %>
    <div id="error_explanation" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@rebanho.errors.count, 'erro nÃ£o permitiu', 'errors nÃ£o permitiram') %> salvar a rebanho:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @rebanho.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :nome, '* Nome' %>
    <%= f.text_field :nome, class: 'form-control' %>
  </div>

  <% if @rebanho.persisted? %>
    <%= render 'bovinos', rebanho: @rebanho %>
  <% end %>

  <%= f.submit class: 'btn btn-primary' %>
  <%= link_to 'Cancelar', rebanhos_path, class: 'btn btn-default' %>
<% end %>
