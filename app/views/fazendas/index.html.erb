<div class="page-header">
  <h1>
    Lista de Fazendas
    <%= link_to 'Nova Fazenda', new_fazenda_path, class: 'btn btn-primary pull-right' %>
  </h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th class="col-xs-3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fazendas.each do |fazenda| %>
      <tr>
        <td><%= fazenda.nome %></td>
        <td>
          <%= link_to 'Editar', edit_fazenda_path(fazenda) %> |
          <%= link_to 'Remover', fazenda, method: :delete, data: { confirm: 'Tem certeza?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
